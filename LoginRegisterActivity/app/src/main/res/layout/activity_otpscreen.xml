<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sushmitakumari.loginregisteractivity.OTPScreen">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/orange">

        <ImageView
            android:id="@+id/imgBackArrow"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/back_arrow" />

    </FrameLayout>

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="76dp"
        android:background="@color/orange"
        app:srcCompat="@drawable/clouds" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView7"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:text="OTP has been sent to your mobile"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true"
        android:text="number. Please enter it below"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/enterOtp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView7"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignRight="@+id/textView7"
        android:layout_alignStart="@+id/textView7"
        android:layout_below="@+id/textView8"
        android:layout_marginTop="21dp"
        android:ems="10"
        android:inputType="phone" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enterOtp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:text="Didn't receive OTP?"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/resendOtp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView9"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:text="RESEND 30"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="@color/teal"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView9"
        android:layout_marginTop="23dp"
        android:text="Verify mobile number"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/verify_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:background="@color/teal"
        android:text="Verify"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"/>
</RelativeLayout>
