<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sushmitakumari.loginregisteractivity.RegisterActivity">


    <EditText
        android:id="@+id/phone_number"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Enter phone number"
        android:inputType="phone" />

    <EditText
        android:id="@+id/signup_input_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/phone_number"
        android:layout_alignLeft="@+id/phone_number"
        android:layout_alignRight="@+id/phone_number"
        android:layout_alignStart="@+id/phone_number"
        android:layout_below="@+id/phone_number"
        android:layout_marginTop="21dp"
        android:ems="10"
        android:hint="Enter email id"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/signup_input_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/signup_input_email"
        android:layout_alignLeft="@+id/signup_input_email"
        android:layout_alignRight="@+id/signup_input_email"
        android:layout_alignStart="@+id/signup_input_email"
        android:layout_below="@+id/signup_input_email"
        android:layout_marginTop="27dp"
        android:ems="10"
        android:hint="Enter you full name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/signup_input_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/signup_input_name"
        android:layout_alignLeft="@+id/signup_input_name"
        android:layout_alignRight="@+id/signup_input_name"
        android:layout_alignStart="@+id/signup_input_name"
        android:layout_centerVertical="true"
        android:ems="10"
        android:hint="Enter your password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/input_confirm_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/signup_input_password"
        android:layout_alignLeft="@+id/signup_input_password"
        android:layout_alignRight="@+id/signup_input_password"
        android:layout_alignStart="@+id/signup_input_password"
        android:layout_below="@+id/signup_input_password"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Confirm your password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btn_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="11dp"
        android:background="@color/teal"
        android:text="Signup"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_above="@+id/signup_input_email"
        android:layout_alignTop="@+id/phone_number"
        android:layout_toLeftOf="@+id/phone_number"
        android:layout_toStartOf="@+id/phone_number"
        app:srcCompat="@drawable/mobile_icon" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_alignBottom="@+id/signup_input_email"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_alignStart="@+id/imageView2"
        android:layout_alignTop="@+id/signup_input_email"
        app:srcCompat="@drawable/mail_icon" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_alignBottom="@+id/signup_input_password"
        android:layout_alignLeft="@+id/imageView3"
        android:layout_alignStart="@+id/imageView3"
        app:srcCompat="@drawable/password_icon" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_alignBottom="@+id/signup_input_name"
        android:layout_alignLeft="@+id/imageView3"
        android:layout_alignStart="@+id/imageView3"
        android:layout_alignTop="@+id/signup_input_name"
        app:srcCompat="@drawable/user_name_icon" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_alignBottom="@+id/input_confirm_password"
        android:layout_alignLeft="@+id/imageView4"
        android:layout_alignStart="@+id/imageView4"
        android:layout_alignTop="@+id/input_confirm_password"
        app:srcCompat="@drawable/password_icon" />
</RelativeLayout>
