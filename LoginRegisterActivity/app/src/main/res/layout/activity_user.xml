<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sushmitakumari.loginregisteractivity.UserActivity">


    <Button
        android:id="@+id/logout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/greeting_text_view"
        android:layout_alignBottom="@+id/greeting_text_view"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:text="Sign Out!!"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/greeting_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="15dp"
        android:text="Hello, User"
        android:textColor="#000000"
        android:textSize="20dp" />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@color/orange"
        android:visibility="visible">

        <ImageView
            android:id="@+id/imgAddMoney"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/add_balance" />

    </FrameLayout>

    <ImageView
        android:id="@+id/imgMoneyTransfer"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:layout_alignTop="@+id/frameLayout"
        android:layout_centerHorizontal="true"
        android:src="@drawable/transfer_balance" />

    <ImageView
        android:id="@+id/imgRecentTransaction"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_alignLeft="@+id/logout_button"
        android:layout_alignStart="@+id/logout_button"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/recent_transations" />

    <TextView
        android:id="@+id/account_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView"
        android:layout_marginBottom="10dp"
        android:layout_toLeftOf="@+id/imgRecentTransaction"
        android:layout_toStartOf="@+id/imgRecentTransaction"
        android:text="Account Balance :"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignEnd="@+id/greeting_text_view"
        android:layout_alignRight="@+id/greeting_text_view"
        android:layout_below="@+id/logout_button"
        android:layout_marginTop="26dp"
        app:srcCompat="@drawable/wallet" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/teal"
        android:id="@+id/frameLayout2">


    </FrameLayout>

    <TextView
        android:id="@+id/getbalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/account_balance"
        android:layout_centerHorizontal="true"
        android:text="0.0"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/getbalance"
        android:layout_toLeftOf="@+id/getbalance"
        android:layout_toStartOf="@+id/getbalance"
        android:text="@string/Rs"
        />

</RelativeLayout>



