<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >


    <ImageView
        android:id="@+id/transtoimg"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/transferredtotext"
        app:srcCompat="@drawable/transfer_balance" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="14dp"
        android:text="Date" />

    <TextView
        android:id="@+id/transferredtotext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@+id/transtoimg"
        android:layout_toRightOf="@+id/transtoimg"
        android:text="Transferred to" />

    <TextView
        android:id="@+id/transferredtoName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/transferredtotext"
        android:layout_alignStart="@+id/transferredtotext"
        android:layout_below="@+id/transferredtotext"
        android:text="Name" />

    <TextView
        android:id="@+id/transferredStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp"
        android:layout_toEndOf="@+id/transferredtotext"
        android:layout_toRightOf="@+id/transferredtotext"
        android:text="Status" />

    <TextView
        android:id="@+id/transferredAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/transferredtotext"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="amount" />


</RelativeLayout>