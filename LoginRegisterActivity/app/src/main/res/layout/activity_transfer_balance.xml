<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sushmitakumari.loginregisteractivity.TransferBalanceActivity">

    <EditText
        android:id="@+id/enter_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/amount_to_transfer"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/amount_to_transfer"
        android:layout_marginTop="13dp"
        android:ems="10"
        android:hint="@string/enter_phone_number"
        android:inputType="phone" />

    <EditText
        android:id="@+id/amount_to_transfer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/enter_phone_number"
        android:layout_marginEnd="62dp"
        android:layout_marginRight="62dp"
        android:layout_marginTop="19dp"
        android:ems="10"
        android:hint="@string/enter_amount_to_be_transfer"
        android:inputType="phone" />

    <Button
        android:id="@+id/transfer_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/amount_to_transfer"
        android:layout_marginTop="29dp"
        android:background="@color/teal"
        android:text="@string/transfer"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignBottom="@+id/enter_phone_number"
        android:layout_toLeftOf="@+id/enter_phone_number"
        android:layout_toStartOf="@+id/enter_phone_number"
        app:srcCompat="@drawable/mobile_icon" />

</RelativeLayout>
